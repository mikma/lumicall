<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_weight="1">
    
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="10dip">

    <TextView
    	android:layout_height="wrap_content"
    	android:text="@string/reg_instructions"
    	android:layout_width="wrap_content"
    	android:textColor="#000000">
    </TextView>
    
<!--     <TextView
    	android:layout_height="wrap_content"
    	android:text="You may modify them later by logging in @pbxes.org via a web browser."
    	android:layout_width="wrap_content"
    	android:paddingTop="10dip"
    	android:textColor="#000000">
    </TextView> -->

    <TextView
    	android:layout_height="wrap_content"
    	android:text="@string/reg_phone_num"
    	android:textStyle="bold"
    	android:textColor="#000000"
    	android:paddingTop="10dip"
    	android:layout_width="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:singleLine="true" >

    </EditText>

    <TextView
    	android:layout_height="wrap_content"
    	android:text="@string/reg_first_name"
    	android:textStyle="bold"
    	android:paddingTop="10dip"
    	android:textColor="#000000"
    	android:layout_width="wrap_content">
    </TextView>
    <EditText android:id="@+id/EditText02"
		android:singleLine="true"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent">
    </EditText>

    <TextView
    	android:layout_height="wrap_content"
    	android:text="@string/reg_last_name"
    	android:textStyle="bold"
    	android:paddingTop="10dip"
    	android:textColor="#000000"
    	android:layout_width="wrap_content">
    </TextView>
    <EditText android:id="@+id/EditText03"
		android:singleLine="true"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent">
    </EditText>
    
    <TextView
    	android:layout_height="wrap_content"
    	android:text="@string/reg_email"
    	android:textStyle="bold"
    	android:paddingTop="10dip"
    	android:textColor="#000000"
    	android:layout_width="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/EditText04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:singleLine="true" >

    </EditText>
    
    <TextView
    	android:layout_height="wrap_content"
    	android:text="@string/reg_missed_call"
    	android:layout_width="wrap_content"
    	android:paddingTop="10dip"
    	android:textColor="#ee2200">
    </TextView>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
    	android:paddingTop="10dip"
	    android:orientation="horizontal">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:orientation="horizontal" android:gravity="left"
		    			android:layout_weight="1"
		    >

		    <Button
		        android:id="@+id/Button01"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:drawableLeft="@drawable/ic_incall_ongoing"
		        android:text="@string/reg_proceed" >

		        </Button>
		</LinearLayout>
	</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:text="@string/reg_privacy"
        android:textColor="#000000"
        android:textSize="11px" >

    </TextView>	
  </LinearLayout>
</ScrollView>
